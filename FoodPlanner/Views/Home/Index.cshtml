@model HomeViewModel

<h2>@Model.Title</h2>

@foreach (var recipe in Model.RecipInfoList)
{

    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@recipe.ImageThumbnailUrl" alt="">
            <div class="caption">
                <h3>
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@recipe.Id">@recipe.Title</a>
                </h3>
                <p>@recipe.Description</p>
            </div>
        </div>
    </div>
}


